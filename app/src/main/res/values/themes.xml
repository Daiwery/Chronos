<resources>
    <!-- Base application theme. -->
    <style name="Theme.Chronos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/App.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/App.CardView</item>
        <item name="bottomSheetDialogTheme">@style/App.BottomDialog</item>
        <item name="editTextStyle">@style/App.EditText</item>
        <item name="checkboxStyle">@style/App.CheckBox</item>
        <item name="tabStyle">@style/App.TabLayout</item>
        <item name="spinnerStyle">@style/App.Spinner</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.TimePicker</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.DatePicker</item>
    </style>
</resources>