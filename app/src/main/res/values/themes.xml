<resources>
    <style name="BaseTheme.Chronos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="bottomNavigationStyle">@style/Style.BottomNavigationView</item>
        <item name="bottomSheetDialogTheme">@style/Style.BottomDialog</item>
        <item name="textInputStyle">@style/Style.TextInputLayout</item>
        <item name="tabStyle">@style/Style.TabLayout</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.TimePicker</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.DatePicker</item>
        <item name="toolbarStyle">@style/Style.ToolBar</item>
        <item name="materialCardViewStyle">@style/Style.CardView</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Style.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="android:verticalScrollbarPosition">left</item>
        <item name="android:scrollbarThumbHorizontal">@null</item>
        <item name="android:scrollbarThumbVertical">@null</item>
    </style>

    <style name="Theme.Chronos" parent="BaseTheme.Chronos">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/white_800</item>
    </style>
</resources>