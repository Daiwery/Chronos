        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline1</item>
    </style>


    <style name="Text.TitleDialog" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_300</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Overline</item>
