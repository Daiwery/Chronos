<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/navigation_day_container">

     <fragment
        android:id="@+id/navigation_child_action_type"
        android:name="com.daiwerystudio.chronos.ui.action_type.ChildActionTypeFragment"
        android:label=""
        tools:layout="@layout/fragment_action_type">
         <action
             android:id="@+id/action_navigation_child_action_type_self"
             app:destination="@id/navigation_child_action_type"
             app:enterAnim="@anim/fade_in"
             app:exitAnim="@anim/fade_out"
             app:popEnterAnim="@anim/fade_in"
             app:popExitAnim="@anim/fade_out"
             app:popUpTo="@id/navigation_child_action_type" />
    </fragment>
    <fragment
        android:id="@+id/navigation_action_type"
        android:name="com.daiwerystudio.chronos.ui.action_type.ActionTypeFragment"
        android:label="@string/action_types"
        tools:layout="@layout/fragment_action_type" >
        <action
            android:id="@+id/action_navigation_action_type_to_navigation_child_action_type"
            app:destination="@id/navigation_child_action_type"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/navigation_action_type" />
    </fragment>
    <fragment
        android:id="@+id/navigation_preview_goal"
        android:name="com.daiwerystudio.chronos.ui.goal.GoalPreviewFragment"
        android:label="@string/goals"
        tools:layout="@layout/fragment_goal_preview">
        <action
            android:id="@+id/action_navigation_preview_goal_to_navigation_goal"
            app:destination="@id/navigation_goal"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/navigation_preview_goal" />
    </fragment>
    <fragment
        android:id="@+id/navigation_goal"
        android:name="com.daiwerystudio.chronos.ui.goal.GoalFragment"
        android:label=""
        tools:layout="@layout/fragment_goal" >
        <action
            android:id="@+id/action_navigation_goal_self"
            app:destination="@id/navigation_goal"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/navigation_goal" />
    </fragment>
    <fragment
        android:id="@+id/navigation_preview_schedule"
        android:name="com.daiwerystudio.chronos.ui.schedule.PreviewScheduleFragment"
        android:label="@string/schedules"
        tools:layout="@layout/fragment_preview_schedule">
        <action
            android:id="@+id/action_navigation_schedule_to_navigation_schedule"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:destination="@id/navigation_schedule" />
    </fragment>
    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.daiwerystudio.chronos.ui.schedule.ScheduleFragment"
        android:label=""
        tools:layout="@layout/fragment_schedule" />
    <fragment
        android:id="@+id/navigation_day_container"
        android:name="com.daiwerystudio.chronos.ui.day.DayContainerFragment"
        android:label="fragment_day_container"
        tools:layout="@layout/fragment_day_container" />
</navigation>