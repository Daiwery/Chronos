<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/navigation_union_preview">

    <fragment
        android:id="@+id/navigation_day_container"
        android:name="com.daiwerystudio.chronos.ui.day.DayContainerFragment"
        android:label="fragment_day_container"
        tools:layout="@layout/fragment_day_container" />
    <fragment
        android:id="@+id/navigation_union_preview"
        android:name="com.daiwerystudio.chronos.ui.union.UnionPreviewFragment"
        android:label="@string/title_union_preview"
        tools:layout="@layout/fragment_union_preview" >
        <action
            android:id="@+id/action_navigation_union_preview_to_navigation_union_action_type"
            app:destination="@id/navigation_union_action_type" />
        <action
            android:id="@+id/action_navigation_union_preview_to_navigation_union_goal"
            app:destination="@id/navigation_union_goal" />
        <action
            android:id="@+id/action_navigation_union_preview_to_navigation_union_schedule"
            app:destination="@id/navigation_union_schedule" />
    </fragment>
    <fragment
        android:id="@+id/navigation_union_action_type"
        android:name="com.daiwerystudio.chronos.ui.action_type.UnionActionTypeFragment"
        android:label=""
        tools:layout="@layout/fragment_union_action_type" >
        <action
            android:id="@+id/action_navigation_union_action_type_self"
            app:destination="@id/navigation_union_action_type" />
        <action
            android:id="@+id/action_navigation_union_action_type_to_navigation_union_goal"
            app:destination="@id/navigation_union_goal" />
        <action
            android:id="@+id/action_navigation_union_action_type_to_navigation_union_schedule"
            app:destination="@id/navigation_union_schedule" />
    </fragment>
    <fragment
        android:id="@+id/navigation_union_goal"
        android:name="com.daiwerystudio.chronos.ui.goal.UnionGoalFragment"
        android:label=""
        tools:layout="@layout/fragment_union_goal" >
        <action
            android:id="@+id/action_navigation_union_goal_to_navigation_union_action_type"
            app:destination="@id/navigation_union_action_type" />
        <action
            android:id="@+id/action_navigation_union_goal_self"
            app:destination="@id/navigation_union_goal" />
        <action
            android:id="@+id/action_navigation_union_goal_to_navigation_union_schedule"
            app:destination="@id/navigation_union_schedule" />
    </fragment>
    <fragment
        android:id="@+id/navigation_union_schedule"
        android:name="com.daiwerystudio.chronos.ui.schedule.UnionScheduleFragment"
        android:label=""
        tools:layout="@layout/fragment_union_schedule" >
        <action
            android:id="@+id/action_navigation_union_schedule_self"
            app:destination="@id/navigation_union_schedule" />
        <action
            android:id="@+id/action_navigation_union_schedule_to_navigation_union_goal"
            app:destination="@id/navigation_union_goal" />
        <action
            android:id="@+id/action_navigation_union_schedule_to_navigation_union_action_type"
            app:destination="@id/navigation_union_action_type" />
    </fragment>
</navigation>