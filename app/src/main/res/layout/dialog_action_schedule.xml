<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.schedule.ActionScheduleDialog">

    <data>
        <variable
            name="actionSchedule"
            type="com.daiwerystudio.chronos.database.ActionSchedule" />
        <variable
            name="type"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            style="@style/Text.TitleDialog"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            style="@style/Text.TitleDialog"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />


        <com.daiwerystudio.chronos.ui.widgets.SelectActionTypeView
            android:id="@+id/selectActionType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/button"
            style="@style/Widget.BottomDialog.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectActionType" />

        <com.daiwerystudio.chronos.ui.widgets.TimeTextView
            android:id="@+id/start_after"
            style="@style/Text.NameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:booleanVisibility="@{type == 0}"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            android:textTime="@{actionSchedule.startAfter}"
            custom:timeLocal="absolute"
            custom:timeStyle="shortFormat"
            custom:timeType="time"
            tools:text="0:10"
            tools:visibility="gone" />

        <com.daiwerystudio.chronos.ui.widgets.TimeTextView
            android:id="@+id/duration"
            style="@style/Text.NameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:booleanVisibility="@{type == 0}"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView8"
            android:textTime="@{actionSchedule.duration}"
            custom:timeLocal="absolute"
            custom:timeStyle="shortFormat"
            custom:timeType="time"
            tools:text="1:50"
            tools:visibility="gone"/>

        <com.daiwerystudio.chronos.ui.widgets.TimeTextView
            android:id="@+id/startTime"
            style="@style/Text.Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:booleanVisibility="@{type != 0}"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            android:textTime="@{actionSchedule.startTime}"
            custom:timeLocal="absolute"
            custom:timeStyle="shortFormat"
            custom:timeType="time"
            tools:text="0:10"
            tools:visibility="visible" />

        <com.daiwerystudio.chronos.ui.widgets.TimeTextView
            android:id="@+id/endTime"
            style="@style/Text.Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:booleanVisibility="@{type != 0}"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView8"
            android:textTime="@{actionSchedule.endTime}"
            custom:timeLocal="absolute"
            custom:timeStyle="shortFormat"
            custom:timeType="time"
            tools:text="0:10"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>