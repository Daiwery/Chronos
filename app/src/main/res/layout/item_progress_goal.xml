<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/point"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:srcCompat="@drawable/drawable_progress_goal_point" />

        <ImageView
            android:id="@+id/bridge"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_marginStart="24dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/point"
            app:layout_constraintStart_toStartOf="@+id/point"
            app:layout_constraintTop_toTopOf="@+id/point"
            app:srcCompat="@drawable/drawable_progress_goal_bridge" />

        <TextView
            android:id="@+id/textView1"
            style="@style/Text.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:gravity="left"
            android:singleLine="true"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/point"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="лю" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>